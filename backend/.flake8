[flake8]
max-line-length = 100
extend-ignore = E203, E501, W503, F401, F841, F541, F811, E402
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    node_modules,
    dist,
    build
per-file-ignores =
    __init__.py: F401
    tests/*: S101
    alembic/versions/*.py: E501, F401
    middleware.py: F821
